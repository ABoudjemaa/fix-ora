generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}
enum UserStatus {
  ACTIVE
  INACTIVE
  SUSPENDED
}

model User {
  id            String     @id @default(uuid())
  email         String     @unique
  password      String
  status        UserStatus @default(ACTIVE)
  emailVerified DateTime?
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  company       Company?

  @@index([email])
  @@index([status])
}

model Company {
  userId   String   @id
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  name     String
  crn      String   @unique @map("commercialRegisterNumber")
  phone    String?
  address  String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  machines Machine[]

  @@index([crn])
  @@map("companies")
}

enum MaintenanceType {
  PIECE
  VIDANGE
}

model Machine {
  id                String      @id @default(uuid())
  name              String
  serialNumber      String      @unique
  createdAt         DateTime
  notificationHours Int
  companyId         String
  company           Company     @relation(fields: [companyId], references: [userId], onDelete: Cascade)

  maintenances      Maintenance[]

  createdAtRecord   DateTime    @default(now())
  updatedAt         DateTime    @updatedAt

  @@index([companyId])
  @@index([serialNumber])
  @@map("machines")
}

model Maintenance {
  id                 String          @id @default(uuid())
  name               String
  type               MaintenanceType
  lifespanHours      Int
  lastReplacementDate DateTime
  machineId          String
  machine            Machine         @relation(fields: [machineId], references: [id], onDelete: Cascade)

  createdAt          DateTime        @default(now())
  updatedAt          DateTime        @updatedAt

  @@index([machineId])
  @@map("maintenances")
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}
enum UserStatus {
  ACTIVE
  INACTIVE
  SUSPENDED
}

model User {
  id            String     @id @default(uuid())
  email         String     @unique
  password      String
  status        UserStatus @default(ACTIVE)
  emailVerified DateTime?
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  company       Company?

  @@index([email])
  @@index([status])
}

model Company {
  userId   String   @id
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  name     String
  ownerName String
  crn      String   @unique @map("commercialRegisterNumber")
  phone    String?
  location String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  machines Machine[]

  @@index([crn])
  @@map("companies")
}

enum MaintenanceType {
  PART
  OIL
}

enum NotificationUrgency {
  APPROACHING
  REQUIRED
}

enum NotificationStatus {
  ACTIVE
  MAINTENANCE_STARTED
}

model Machine {
  id                     String      @id @default(uuid())
  name                   String
  serialNumber           String      @unique
  catalogLink            String?
  operatingHours         Int         @default(0)
  notificationAdvanceHours Int
  companyId              String
  company                Company     @relation(fields: [companyId], references: [userId], onDelete: Cascade)

  maintenances           Maintenance[]
  notifications          Notification[]
  maintenanceRecords     MaintenanceRecord[]

  createdAtRecord        DateTime    @default(now())
  updatedAt              DateTime    @updatedAt

  @@index([companyId])
  @@index([serialNumber])
  @@map("machines")
}

model Maintenance {
  id                      String          @id @default(uuid())
  name                    String
  type                    MaintenanceType
  replacementIntervalHours Int
  lastReplacementDate       DateTime
  machineId               String
  machine                 Machine         @relation(fields: [machineId], references: [id], onDelete: Cascade)

  createdAt               DateTime        @default(now())
  updatedAt               DateTime        @updatedAt

  notifications           Notification[]
  maintenanceRecords      MaintenanceRecord[]

  @@index([machineId])
  @@map("maintenances")
}

model Notification {
  id              String            @id @default(uuid())
  machineId       String
  maintenanceId   String
  maintenanceType MaintenanceType
  urgency         NotificationUrgency
  status          NotificationStatus @default(ACTIVE)
  triggeredAt     DateTime          @default(now())
  
  machine         Machine           @relation(fields: [machineId], references: [id], onDelete: Cascade)
  maintenance     Maintenance       @relation(fields: [maintenanceId], references: [id], onDelete: Cascade)

  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt

  maintenanceRecords  MaintenanceRecord[]

  @@index([machineId])
  @@index([status])
  @@index([urgency])
  @@index([maintenanceId, status])
  @@map("notifications")
}

model MaintenanceRecord {
  id              String            @id @default(uuid())
  machineId       String
  maintenanceId   String
  notificationId  String?
  
  startedAt       DateTime          @default(now())
  completedAt    DateTime?
  comment         String?
  status          String            @default("IN_PROGRESS") // "IN_PROGRESS" | "COMPLETED"
  
  machine         Machine           @relation(fields: [machineId], references: [id], onDelete: Cascade)
  maintenance     Maintenance       @relation(fields: [maintenanceId], references: [id], onDelete: Cascade)
  notification    Notification?     @relation(fields: [notificationId], references: [id], onDelete: SetNull)

  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt

  @@index([machineId])
  @@index([maintenanceId])
  @@index([status])
  @@index([notificationId])
  @@map("maintenance_records")
}
